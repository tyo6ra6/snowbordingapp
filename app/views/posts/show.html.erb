<div class="album py-5 bg-light ">
  
    <div class="container">

      <div class="row row-cols- row-cols-sm-2 g-2 justify-content-center ">

        <div class="col">
          <div class="card shadow-sm">

             <%= image_tag @post.image %>

                <div class="card-body">
                  <p>
                    <div class = "record-days" >
                       <p>スキー場名: <%= @post.ski_resort_name %></p>
                    </div>
                    <div>
                       <p>エリア: <%= @post.area.name %></p>
                    </div>
                    <div>
                     <p>都道府県: <%= @post.prefecture.name %></p>
                    </div>
                     <div >
                      <p>天候: <%= @post.weather.name %></p>
                    </div>
                     <div >
                      <p>メモ: <%= @post.thoughts %></p>
                    </div>
      
                  </p>   
          
                <% if @post.user == current_user %>
                   <p>
                    <%= link_to( edit_post_path) do %>
                  <button type="button" class="btn btn-warning">記録を編集</button>
                    <% end %>

                     <%= link_to post_path, method: :delete  do %>
                    <button type="button" class="btn btn-success">記録を削除</button>
                    <% end %>
                    </p>
                <% end %>
                         

          
      </div>                  
    </div>
</div>